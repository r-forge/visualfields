citHeader("To cite the package 'visualFields' in publications use:")year <- 2013vers <- paste( "R package version", meta$Version )     citEntry( entry   = "Article",          title   = "The visualFields package: A tool for analysis and visualization of visual fields",          author  = personList( as.person( "Ivan Marin-Franch" ),                                as.person( "William H Swanson" ) ),          year    = year,          note    = vers,          journal = "Journal of Vision",          volume  = "13",          number  = "4",          pages   = "10, 1-12",          doi     = "10.1167/13.4.10",
          textVersion = paste( "Marin-Franch I & Swanson WH. ", "The visualFields package: A tool for analysis and visualization of visual fields. ", "Journal of Vision, 2013, 13(4):10, 1-12 (", vers, ").", sep = "" ) )
